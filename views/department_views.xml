<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hospital_department_tree_view" model="ir.ui.view">
        <field name="name">hospital.department.list</field>
        <field name="model">hospital.department</field>
        <field name="arch" type="xml">
            <list string="Departments">
                <field name="name"/>
                <field name="code"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="hospital_department_form_view" model="ir.ui.view">
        <field name="name">hospital.department.form</field>
        <field name="model">hospital.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="doctors" string="Doctors">
                            <field name="doctor_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="specialization"/>
                                    <field name="phone"/>
                                </list>
                            </field>
                        </page>
                        <page name="notes" string="Notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hospital_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">hospital.department</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first department!
            </p>
        </field>
    </record>
</odoo>
