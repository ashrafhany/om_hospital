<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hospital_doctor_tree_view" model="ir.ui.view">
        <field name="name">hospital.doctor.list</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <list string="Doctors">
                <field name="name"/>
                <field name="specialization"/>
                <field name="phone" optional="show"/>
                <field name="email" optional="show"/>
                <field name="consultation_fee" optional="show"/>
                <field name="years_of_experience" optional="show"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="hospital_doctor_form_view" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Doctor Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="gender"/>
                            <field name="specialization"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="department_id"/>
                        </group>
                        <group>
                            <field name="consultation_fee"/>
                            <field name="years_of_experience"/>
                            <field name="license_number"/>
                            <field name="available_days"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="address" string="Address">
                            <field name="address"/>
                        </page>
                        <page name="appointments" string="Appointments">
                            <field name="appointment_ids" readonly="1">
                                <list>
                                    <field name="reference"/>
                                    <field name="patient_id"/>
                                    <field name="date_appointment"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page name="notes" string="Notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter>
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </chatter>
            </form>
        </field>
    </record>

    <record id="hospital_doctor_search_view" model="ir.ui.view">
        <field name="name">hospital.doctor.search</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <search string="Doctors">
                <field name="name"/>
                <field name="specialization"/>
                <field name="phone"/>
                <field name="email"/>
                <separator/>
                <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
                <group expand="0" string="Group By">
                    <filter string="Gender" name="gender" context="{'group_by': 'gender'}"/>
                    <filter string="Specialization" name="specialization" context="{'group_by': 'specialization'}"/>
                    <filter string="Department" name="department" context="{'group_by': 'department_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first doctor!
            </p>
        </field>
    </record>
</odoo>
